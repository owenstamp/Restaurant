@page
@model Restaurant.Web.Pages.OrderHistoryModel
@{
    Layout = "_Layout";
    var hasSelected = Model.SelectedOrder != null;
}

<section class="order-history">
    <h1>Order History</h1>

    <div class="history-container">
        <aside class="history-list">
            <h2>All Orders</h2>
            <ul>
                @foreach (var order in Model.PastOrders)
                {
                    <li class="history-item @(hasSelected && Model.SelectedOrder.Id == order.Id ? "selected" : "")">
                        <a asp-page="./OrderHistory"
                           asp-route-selectedOrderId="@order.Id">
                            @order.OrderDateTime.ToString("g") &mdash; @order.TotalAmount:C
                        </a>
                    </li>
                }
            </ul>
        </aside>

        @if (hasSelected)
        {
            <section class="history-details">
                <h2>Details for @Model.SelectedOrder.OrderDateTime.ToString("f")</h2>
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SelectedOrder.Items)
                        {
                            var name = Model.MenuItemNames[item.MenuItemId];
                            <tr>
                                <td>@name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price:C</td>
                                <td>@(item.Price * item.Quantity):C</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right"><strong>Total:</strong></td>
                            <td><strong>@Model.SelectedOrder.TotalAmount:C</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </section>
        }
    </div>
</section>

<style>
    .history-container {
        display: flex;
        gap: 2rem;
    }

    .history-list {
        flex: 1 1 200px;
        max-width: 250px;
        border-right: 1px solid #ccc;
        padding-right: 1rem;
    }

        .history-list ul {
            list-style: none;
            padding: 0;
        }

        .history-list li {
            margin: 0.5rem 0;
        }

            .history-list li.selected a {
                font-weight: bold;
                color: #007bff;
            }

    .history-details {
        flex: 3;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .styled-table th,
        .styled-table td {
            border: 1px solid #ddd;
            padding: 0.5rem;
        }

        .styled-table thead th {
            background: #f5f5f5;
            text-align: left;
        }

    .text-right {
        text-align: right;
    }
</style>

@page
@model StaffModel
@{
    Layout = "_Layout";
    var role = HttpContext.Session.GetString("UserRole") ?? "";
}

@if (role != "Manager")
{
    <h2>Access Denied</h2>
    <p>You do not have permission to view this page.</p>
    return;
}

<section class="staff-section">
    <h2>Staff Management</h2>

    <!-- Add Staff Form -->
    <form method="post" class="staff-form">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" name="FirstName" required />
        </div>

        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" name="LastName" required />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" name="Email" required />
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="tel" name="PhoneNumber" required />
        </div>

        <div class="form-group">
            <label for="Role">Role</label>
            <select name="Role" required>
                <option>Waitstaff</option>
                <option>Kitchen</option>
                <option>Manager</option>
            </select>
        </div>

        <button type="submit" class="btn">Add Staff Member</button>
    </form>

    @if (Model.Message != null)
    {
        <p class="info">@Model.Message</p>
    }

    <!-- Staff List -->
    <h3>Current Staff</h3>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Hired</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.StaffList)
            {
                <tr>
                    <td>@s.FirstName @s.LastName</td>
                    <td>@s.Email</td>
                    <td>@s.PhoneNumber</td>
                    <td>@s.Role</td>
                    <td>@s.HireDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</section>

@page
@model Restaurant.Web.Pages.KitchenOrdersModel
@{
    Layout = "_Layout";
}

<h1>Kitchen Orders</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert">@Model.Message</div>
}

<table class="styled-table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Time</th>
            <th>Status</th>
            <th>Items (count)</th>
            <th>Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vm in Model.Orders)
        {
            <tr>
                <td>@vm.Id</td>
                <td>@vm.OrderedAt.ToString("g")</td>
                <td>@vm.Status</td>
                <td>@vm.Items.Count</td>
                <td>
                    <ul class="item-list">
                        @foreach (var it in vm.Items)
                        {
                            <li>@it.Name × @it.Quantity</li>
                        }
                    </ul>
                </td>
                <td>
                    <form method="post" asp-page-handler="MarkAsPrepared">
                        <input type="hidden" name="OrderId" value="@vm.Id" />
                        <button type="submit" class="btn">Mark Ready</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .styled-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .styled-table th,
        .styled-table td {
            border: 1px solid #ddd;
            padding: 0.5rem;
        }

        .styled-table thead th {
            background: #f5f5f5;
            text-align: left;
        }

    .item-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .item-list li {
            margin: 0.25rem 0;
        }

    .btn {
        padding: 0.25rem 0.5rem;
        border: none;
        background: #007bff;
        color: white;
        cursor: pointer;
    }

        .btn:hover {
            background: #0056b3;
        }

    .alert {
        padding: 0.5rem;
        background: #e0f7fa;
        border: 1px solid #4dd0e1;
        margin-bottom: 1rem;
    }
</style>
